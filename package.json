{
  "name": "avila-dashboard-backend",
  "version": "2.0.0",
  "description": "Backend para Avila Dashboard - Integração com todos os serviços",
  "type": "module",
  "main": "dist/server.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "node server.js",
    "start:refactored": "node server.refactored.js",
    "dev": "nodemon server.js",
    "dev:refactored": "nodemon server.refactored.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:prod": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o dist/css/dashboard.min.css src/public/css/dashboard.css",
    "minify:js": "terser src/public/js/dashboard.js -o dist/js/dashboard.min.js -c -m",
    "start:ts": "node --loader ts-node/esm src/server.ts",
    "dev:ts": "nodemon --exec node --loader ts-node/esm src/server.ts",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.5",
    "google-auth-library": "^10.5.0",
    "googleapis": "^170.0.0",
    "helmet": "^7.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "stripe": "^14.7.0",
    "typescript": "^5.9.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.7",
    "@types/nodemailer": "^7.0.5",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2"
  }
}
